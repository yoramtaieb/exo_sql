<div class="form-group row">
  <label class="col-form-label col-sm-2" for="title">Title</label>
  <div class="col-sm-8">
    <input autofocus class="form-control" name="title" value="<%= contact.title %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="email">Email</label>
  <div class="col-sm-7">
    <input class="form-control" name="email" value="<%= contact.email %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="message">Message</label>
  <div class="col-sm-10">
    <textarea class="form-control" cols="20" name="message" maxlength="32000" rows="7"><%= contact.message %></textarea>
  </div>
</div>